[diff]
	tool = vimdiff

[color]
	ui = auto

[alias]
	l     = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --author-date-order
	lg    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --author-date-order --all
	stat  = status
	st    = status
	ff    = merge --ff-only
	index = diff --cached
	preb  = pull --rebase
	prush = push --recurse-submodules=on-demand
# destroy = git filter-branch -f --index-filter "git rm -r --cached --ignore-unmatch " && rm -rf .git/refs/original .git/logs/ && git prune --expire=now && git gc

[core]
	excludesfile = ~/config/gitignore/Global/*.gitignore
	whitespace = space-before-tab

[push]
	default = upstream

[merge]
	conflictstyle = diff3

[mergetool "tabbedmeld"]
	cmd = meld $LOCAL $BASE $REMOTE -o $MERGED --diff $BASE $LOCAL --diff $BASE $REMOTE

[mergetool "fugitive"]
	cmd = vim -f -c Gdiff $MERGED

[include]
	path = ~/.gitconfig.local
